<UserControl x:Class="BeatfanControls.Charts.LineChart1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BeatfanControls.Charts"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="300">
    <Viewbox Stretch="Fill" Height="400" Width="300">
        <Grid>
            <Path Name="coordinate" Stroke="Black" StrokeThickness="3" Data="M20,400 L20,0 M0,200 L320,200" Width="200" Height="200"/>
            <Path Name="myLineChart1" Stroke="Blue" StrokeThickness="2" Margin="0"/>
        </Grid>
    </Viewbox>
</UserControl>
